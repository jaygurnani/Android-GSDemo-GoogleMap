<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.dji.GSDemo.GoogleMap.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ConnectStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GSDemo"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="21sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/locate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Locate"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/loopCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LoopCount"
            android:layout_weight="0.9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Config"
            android:layout_weight="0.9"/>
        <Button
            android:id="@+id/prepare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prepare"
            android:layout_weight="0.9"/>
        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/startTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Timer"
            android:layout_weight="0.9"/>

        <Button
            android:id="@+id/stopTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Timer"
            android:layout_weight="0.9"/>

        <Button
            android:id="@+id/exportData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export Data"
            android:layout_weight="0.9"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LogInfo"
            android:layout_weight="0.9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/turnPitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turn Pitch"
            android:layout_weight="0.9"/>


        <Button
            android:id="@+id/turnDegrees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turn Degree"
            android:layout_weight="0.9"/>

        <Button
            android:id="@+id/goStraight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Straight"
            android:layout_weight="0.9"/>

        <Button
            android:id="@+id/cancelTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Timer"
            android:layout_weight="0.9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pitch1"
            android:layout_weight="0.9"/>

        <EditText
            android:id="@+id/roll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roll1"
            android:layout_weight="0.9"/>

        <EditText
            android:id="@+id/degreeToTurn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yaw"
            android:layout_weight="0.9"/>

        <EditText
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height"
            android:layout_weight="0.9"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/speed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pitch2"
            android:layout_weight="0.9"/>

        <EditText
            android:id="@+id/roll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roll2"
            android:layout_weight="0.9"/>

        <Button
            android:id="@+id/enableVirtual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Virtual"
            android:layout_weight="0.9"/>

        <Button
            android:id="@+id/disableVirtual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable Virtual"
            android:layout_weight="0.9"/>

    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

</LinearLayout>